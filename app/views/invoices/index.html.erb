<p id="notice"><%= notice %></p>

<h1>Listing Invoices</h1>

<div class = "media">
  <div class = "media-body">
<table class="table table-hover">
  <thead>
    <tr>
      <th>Date</th>
      <th>Company</th>
      <th>Tax</th>
      <th>Salesperson</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @invoices.each do |invoice| %>
      <tr>
        <td><%= invoice.date.strftime("%Y/%m/%d") %></td>
        <td><%= invoice.company %></td>
        <td><%= invoice.tax %></td>
        <td><%= invoice.salesperson %></td>
        <td><%= link_to 'Mostrar', invoice, class: 'btn btn-xs btn-default' %></td>
        <td><%= link_to 'Editar', edit_invoice_path(invoice), class: 'btn btn-xs btn-success' %></td>
        <td><%= link_to 'Borrar', invoice, method: :delete, class: 'btn btn-xs btn-danger', data: { confirm: 'Â¿Seguro que quieres borrar?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

